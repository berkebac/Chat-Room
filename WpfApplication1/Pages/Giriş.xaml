<Page x:Class="WpfApplication1.Pages.Giriş"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApplication1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Giriş">

    <Grid Background="White">
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="56,41,0,0" TextWrapping="Wrap" Text="Kullanıcı Adı " VerticalAlignment="Top"/>
        <TextBox x:Name="tbkullanıcıadı" HorizontalAlignment="Left" Height="23" Margin="139,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Left" Margin="65,80,0,0" TextWrapping="Wrap" Text="Parola" VerticalAlignment="Top"/>
        <TextBox x:Name="tbparola" HorizontalAlignment="Left" Height="23" Margin="139,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btngiriş" Content="Giriş" HorizontalAlignment="Left" Margin="184,130,0,0" VerticalAlignment="Top" Width="75" Click="btngiriş_Click"/>
        <Button x:Name="btnkayıt" Content="Kayıt Ol" HorizontalAlignment="Left" Margin="56,130,0,0" VerticalAlignment="Top" Width="75" Click="btnkayıt_Click"/>

    </Grid>
</Page>
